<h2>All employees!</h2>
    <table class="table table-striped">
        <thead>
            <tr>
               <th>Full name</th>  <th>Phone</th>  <th>Email</th>  <th>City</th>
            </tr>
        </thead>
        <tbody>
            {{#each employees}}
                <tr>
                    <td>{{fullName}}</td>
                    <td>{{phone}}</td>
                    <td>{{email}}</td>
                    <td>{{city}}</td>
                    <td>
                        <a href="/employees/update/{{id}}" class="btn btn-info" target="_blank">
                            <i class="fa fa-pencil"></i> Update
                        </a>
                    </td>
                    <td>
                        <form action="/employees/delete/{{id}}?_method=DELETE" method="post">
                            <input type="hidden" name="_method" value="DELETE" onclick="return confirm('Are you sure you want to delete this record?')">
                            <i class="fa fa-trash"><input type="submit" class="btn btn-sm btn-warning" value="Delete"></i>
                        </form>
                    </td>
                </tr>

            {{else}}
                <h2>No employees</h2>
            {{/each}}

        </tbody>

    </table>




